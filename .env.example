# ==========================================
# Text-to-SQL Agent Environment Variables
# ==========================================

# === LLM API Keys ===
GEMINI_API_KEY=your_gemini_api_key_here
# LANGSMITH_API_KEY=your_langsmith_key_here  # Optional: for tracing

# === MySQL Database (SSH Tunnel) ===
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# === SSH Tunnel Configuration ===
SSH_HOST=your_ssh_host
SSH_PORT=22
SSH_USER=your_ssh_user
SSH_PASSWORD=your_ssh_password
# SSH_KEY_PATH=/root/.ssh/id_rsa  # Alternative to password

# === ClickHouse Database ===
CH_DB_HOST=your_clickhouse_host
CH_DB_USER=your_ch_user
CH_DB_PORT=8123
CH_DB_PASSWORD=your_ch_password
CH_DB_NAME=your_ch_database

# === Qdrant Vector Database ===
QDRANT_COLLECTION_NAME=your_collection_name
QDRANT_HOST=your_qdrant_host
QDRANT_PORT=6333

# === Server Configuration ===
API_HOST=0.0.0.0
API_PORT=8000

# === Chainlit Configuration ===
LANGSERVE_URL=http://backend:8000/agent
CHAINLIT_AUTH_SECRET=your_random_secret_here

# === Logging ===
LOG_LEVEL=INFO
\n# Chainlit Authentication\nCHAINLIT_AUTH_PASSWORD=your_secure_password
